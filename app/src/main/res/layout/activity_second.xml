<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de Personagem"
                android:textSize="24sp"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Personagem" />

            <Spinner
                android:id="@+id/spnClasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/classes_rpg"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/spnRaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/racas_rpg"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nível do Personagem"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modificador de Proficiencia:"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvModProficiencia"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atributos"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Força"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etForca"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@android:drawable/edit_text"
                        android:gravity="center"
                        android:hint="Valor"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tvModForca"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Destreza"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etDestreza"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvModDestreza"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Constituição"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etConstituicao"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvModConstituicao"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Inteligência"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etInteligencia"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvModInteligencia"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sabedoria"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etSabedoria"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvModSabedoria"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carisma"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etCarisma"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvModCarisma"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perícias"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Atletismo (Força)"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbAtletismo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvAtletismo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Furtividade (Destreza)"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbFurtividade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvFurtividade"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Arcanismo (Inteligencia)"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbArcanismo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvArcanismo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sobrevivencia (Sabedoria)"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbSobrevivencia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvSobrevivencia"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Performance (Carisma)"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbPerformance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvPerformance"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>